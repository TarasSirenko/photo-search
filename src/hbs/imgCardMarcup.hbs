{{#each this}}

<div class="photo-card" data-id={{this.id}} data-type={{this.type}}>
    <a class="card-link" href="{{this.largeImageURL}}">
        <img src="{{this.webformatURL}}" alt="{{this.tags}}" loading="lazy" class="card-img" />
    </a>
    <div class="info">
        <p class="info-item">
            <b>{{this.tags}}</b>
        </p>

        <label aria-hidden="true" class="label-add-favorites ">
            <input class="add-favorites" type="checkbox" aria-label="добавление в избранное" {{this.check}} />
            <svg class="theme-switch__icon custom-checkbox" role="img" aria-label="Иконка солнца">
                <use href="/photo-search/sprite.dc9ae70e.svg#icon-star"></use>
            </svg>
        </label>
        <div class="info-wrapper">
            <p class="info-item">
                <b class="likes info-item--element"><svg class="theme-switch__icon" role="img"
                        aria-label="Иконка солнца">
                        <use href="/photo-search/sprite.dc9ae70e.svg#icon-likes"></use>
                    </svg>{{this.likes}}</b>
            </p>
            <p class="info-item">
                <b class="views info-item--element"><svg class="theme-switch__icon" role="img"
                        aria-label="Иконка солнца">
                        <use href="/photo-search/sprite.dc9ae70e.svg#icon-views"></use>
                    </svg>{{this.views}}</b>
            </p>
            <p class="info-item">
                <b class="comments info-item--element"><svg class="theme-switch__icon" role="img"
                        aria-label="Иконка солнца">
                        <use href="/photo-search/sprite.dc9ae70e.svg#icon-comments"></use>
                    </svg> {{this.comments}}</b>
            </p>
            <p class="info-item">
                <b class="downloads info-item--element">
                    <svg class="theme-switch__icon" role="img" aria-label="Иконка солнца">
                        <use href="/photo-search/sprite.dc9ae70e.svg#icon-download"></use>
                    </svg> {{this.downloads}}</b>
            </p>
        </div>

    </div>
</div>

{{/each}}
